                    <Grid Grid.Row="0" 
                         Padding="20"
                         Margin="5,10,20,0"
                         BackgroundColor="Transparent">
                        <StackLayout Spacing="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Text="Merhaba, Ahmet YILMAZ"
                                   Grid.Row="0"
                                 FontSize="14"
                                 FontFamily="NexaHeavy" 
                                 Margin="0,0,0,5"
                                 VerticalOptions="CenterAndExpand"
                                 HorizontalOptions="StartAndExpand"
                                 TextColor="#1F252A"/> 
                                <Label Text="Öğrenci Listesi"
                                   Grid.Row="1"
                                 FontSize="14"
                                 Margin="0,0,0,0"
                                 FontFamily="NexaLight"
                                 FontAttributes="Bold"
                                 VerticalOptions="CenterAndExpand"
                                 HorizontalOptions="StartAndExpand"
                                 TextColor="#1F252A"/>
                                <CollectionView Grid.Row="2"
                                                Margin="0,15,0,0"
                                                ItemsSource="{Binding Profiles}"
                                                VerticalOptions="CenterAndExpand">
                                    <CollectionView.ItemsLayout>
                                        <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal"/>
                                    </CollectionView.ItemsLayout>

                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="models:Profile">
                                            <Grid ColumnDefinitions=".35*,.65*"
                                                  HeightRequest="60"
                                                  WidthRequest="160">
                                                <RoundRectangle Grid.ColumnSpan="2"
                                                                CornerRadius="45"
                                                                BackgroundColor="Transparent"
                                                                Fill="#fff" />
                                                <Border Grid.RowSpan="2"
                                                        Margin="5,0,0,0"
                                                        HeightRequest="60"
                                                        HorizontalOptions="CenterAndExpand"
                                                        StrokeShape="RoundRectangle 80,80,80,80"
                                                        StrokeThickness="0"
                                                        WidthRequest="60">
                                                    <Image HeightRequest="60"  
                                                           AbsoluteLayout.LayoutBounds="10, 15, AutoSize, AutoSize"
                                                           AbsoluteLayout.LayoutFlags="PositionProportional" 
                                                           WidthRequest="60" 
                                                           Aspect="AspectFill" 
                                                           Source="{Binding ProfileImage}"/>
                                                </Border>
                                                <VerticalStackLayout Grid.Column="1"
                                                                     VerticalOptions="Center">
                                                    <Label Margin="10,0,0,0" FontFamily="NexaHeavy"
                                                           HorizontalOptions="Start"
                                                           Text="{Binding Name}"
                                                           TextColor="#1F252A"
                                                           VerticalTextAlignment="Center"/>
                                                    <Label Grid.Column="1"
                                                           Margin="10,0,0,0"
                                                           FontFamily="NexaHeavy"
                                                           FontSize="12"
                                                           Text="{Binding NoPhotos, StringFormat='{0} .Sınıf'}"
                                                           TextColor="#62666a"
                                                           VerticalOptions="Start"/>
                                                </VerticalStackLayout>

                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                            </Grid>


                        </StackLayout>
                    </Grid>
                    <Grid Grid.Row="1"
                      Margin="0,20,0,0"
                      HorizontalOptions="CenterAndExpand"
                      VerticalOptions="CenterAndExpand">
                        <Grid ColumnDefinitions="*,*"
                          RowDefinitions="Auto"
                          Padding="10"
                          ColumnSpacing="10">

                            <!-- Sol Kart -->
                            <Frame Grid.Column="0"
                               Margin="5"
                               Padding="10"
                               HeightRequest="210"
                               BorderColor="Transparent"
                               BackgroundColor="#FFFFFF"
                               CornerRadius="15"
                               HasShadow="True">

                                <VerticalStackLayout Spacing="10">
                                    <!-- Başlık -->
                                    <Grid>
                                        <Label Text="Devamsızlık"
                                       FontSize="14" 
                                        FontFamily="NexaHeavy"
                                       TextColor="#1F252A"
                                       HorizontalOptions="Center"/>
                                    </Grid>

                                    <!-- Ayraç -->
                                    <BoxView HeightRequest="1"
                                 Color="#1F252A"
                                 Opacity="0.3"
                                 Margin="0,0,0,0"/>

                                    <!-- Öğrenci Listesi -->
                                    <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="10">
                                        <Frame BackgroundColor="Transparent" 
                                       Padding="8"
                                       BorderColor="#F5F5F5"
                                       CornerRadius="8">
                                            <Grid VerticalOptions="CenterAndExpand" ColumnDefinitions="Auto,*">
                                                <Label Text="Burak YILMAZ"
                                                   FontSize="12"
                                                   WidthRequest="80"
                                                   HorizontalOptions="StartAndExpand"
                                                   HorizontalTextAlignment="Center"
                                                   FontFamily="NexaHeavy"
                                                   Grid.Column="0"
                                                   TextColor="#1F252A"/>
                                                <Label Text=" : 3 Gün"
                                               Grid.Column="1"
                                               HorizontalTextAlignment="Center"
                                               HorizontalOptions="EndAndExpand"
                                               TextColor="#62666a"
                                               FontFamily="NexaLight"
                                               FontAttributes="Bold"/>
                                            </Grid>
                                        </Frame>

                                        <Frame BackgroundColor="Transparent" 
                                        Padding="8"
                                        BorderColor="#F5F5F5"
                                        CornerRadius="8">
                                             <Grid VerticalOptions="CenterAndExpand" ColumnDefinitions="Auto,*">
                                             <Label Text="Kazım YILMAZ"
                                                    FontSize="12"
                                                    WidthRequest="80"
                                                    HorizontalOptions="StartAndExpand"
                                                    HorizontalTextAlignment="Center"
                                                    FontFamily="NexaHeavy"
                                                    Grid.Column="0"
                                                    TextColor="#1F252A"/>
                                               <Label Text=" : 5 Gün"
                                                Grid.Column="1"
                                                HorizontalTextAlignment="Center"
                                                HorizontalOptions="EndAndExpand"
                                                TextColor="#62666a"
                                                FontFamily="NexaLight"
                                                FontAttributes="Bold"/>
                                            </Grid>
                                        </Frame>

                                        <Frame BackgroundColor="Transparent" 
                                        Padding="8"
                                        BorderColor="#F5F5F5"
                                        CornerRadius="8">
                                            <Grid VerticalOptions="CenterAndExpand" ColumnDefinitions="Auto,*">
                                                <Label Text="Ebru YILMAZ"
                                                    FontSize="12"
                                                    WidthRequest="80"
                                                    HorizontalOptions="StartAndExpand"
                                                    HorizontalTextAlignment="Center"
                                                    FontFamily="NexaHeavy"
                                                    Grid.Column="0"
                                                    TextColor="#1F252A"/>
                                                <Label Text=" :1 Gün"
                                                Grid.Column="1"
                                                HorizontalTextAlignment="Center"
                                                HorizontalOptions="EndAndExpand"
                                                TextColor="#62666a"
                                                FontFamily="NexaLight"
                                                FontAttributes="Bold"/>
                                            </Grid>
                                        </Frame>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Sağ Kart -->
                            <Frame Grid.Column="1"
                            Margin="5"
                            Padding="13"
                            HeightRequest="210"
                            BorderColor="Transparent"
                            BackgroundColor="#FFFFFF"
                            CornerRadius="15"
                            HasShadow="True">

                                <VerticalStackLayout Spacing="10">
                                    <!-- Başlık -->
                                    <Grid>
                                        <Label Text="Not Ortalaması"
                                FontSize="14" 
                                 FontFamily="NexaHeavy"
                                TextColor="#1F252A"
                                HorizontalOptions="Center"/>
                                    </Grid>

                                    <!-- Ayraç -->
                        <BoxView HeightRequest="1"
                                          Color="#1F252A"
                                          Opacity="0.3"
                                          Margin="0,0,0,0"/>

                                    <!-- Öğrenci Listesi -->
                                    <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="10">
                                        <Frame BackgroundColor="Transparent" 
                                    Padding="8"
                                    BorderColor="#F5F5F5"
                                    CornerRadius="8">
                                            <Grid VerticalOptions="CenterAndExpand" ColumnDefinitions="Auto,*">
                                                <Label Text="Burak YILMAZ"
                                        FontSize="12"
                                        WidthRequest="80"
                                        HorizontalOptions="StartAndExpand"
                                        HorizontalTextAlignment="Center"
                                        FontFamily="NexaHeavy"
                                        Grid.Column="0"
                                        TextColor="#1F252A"/>
                                                <Label Text=" : 81,71"
                                    Grid.Column="1"
                                    HorizontalTextAlignment="Center"
                                    HorizontalOptions="EndAndExpand"
                                    TextColor="#62666a"
                                    FontFamily="NexaLight"
                                    FontAttributes="Bold"/>
                                            </Grid>
                                        </Frame>

                                   <Frame BackgroundColor="Transparent" 
                                     Padding="8"
                                     BorderColor="#F5F5F5"
                                     CornerRadius="8">
                                            <Grid VerticalOptions="CenterAndExpand" ColumnDefinitions="Auto,*">
                                                <Label Text="Kazım YILMAZ"
                                     FontSize="12"
                                     WidthRequest="80"
                                     HorizontalOptions="StartAndExpand"
                                     HorizontalTextAlignment="Center"
                                     FontFamily="NexaHeavy"
                                     Grid.Column="0"
                                     TextColor="#1F252A"/>
                                                <Label Text=" : 78,5"
                                     Grid.Column="1"
                                     HorizontalTextAlignment="Center"
                                     HorizontalOptions="EndAndExpand"
                                     TextColor="#62666a"
                                     FontFamily="NexaLight"
                                     FontAttributes="Bold"/>
                                            </Grid>
                                        </Frame>

                                        <Frame BackgroundColor="Transparent" 
                                 Padding="8"
                                 BorderColor="#F5F5F5"
                                 CornerRadius="8">
                                            <Grid VerticalOptions="CenterAndExpand" ColumnDefinitions="Auto,*">
                                                <Label Text="Ebru YILMAZ"
                                             FontSize="12"
                                             WidthRequest="80"
                                             HorizontalOptions="StartAndExpand"
                                             HorizontalTextAlignment="Center"
                                             FontFamily="NexaHeavy"
                                             Grid.Column="0"
                                             TextColor="#1F252A"/>
                                                                    <Label Text=" : 90,0"
                                         Grid.Column="1"
                                         HorizontalTextAlignment="Center"
                                         HorizontalOptions="EndAndExpand"
                                         TextColor="#62666a"
                                         FontFamily="NexaLight"
                                         FontAttributes="Bold"/>
                                            </Grid>
                                        </Frame>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="2"
                  Margin="5,20,5,0"
                  HorizontalOptions="CenterAndExpand"
                  VerticalOptions="CenterAndExpand">
                                    <Grid ColumnDefinitions="*,*,*"
                      RowDefinitions="Auto"
                      Padding="10"
                      ColumnSpacing="10">

                            <!-- Servis Kartı -->
                            <Frame Grid.Column="0"
                            WidthRequest="120"
                             Padding="5"
                           Margin="0,5,0,0"
                           BorderColor="Transparent"
                           BackgroundColor="#FFFFFF"
                           CornerRadius="15"

                                HasShadow="True">
                              
                                <VerticalStackLayout Spacing="10" Margin="0,5,0,10">
                                    <!-- Görsel -->
                                    <Image Source="bus.png"
                                       HeightRequest="60"
                                       WidthRequest="60"
                                       HorizontalOptions="Center"/>
                                    <BoxView HeightRequest="1"
                                Color="#1F252A"
                                Opacity="0.3"/>
                                    <!-- Başlık -->
                                    <Label Text="Servis"
                                   FontSize="16"
                                   FontFamily="NexaHeavy"
                                   TextColor="#1F252A"
                                   HorizontalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                                        </Label.GestureRecognizers>                                            
                                    </Label>
                                    <!-- Ayraç -->
                                
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Duyurular Kartı -->
                            <Frame Grid.Column="1"
                               Margin="5"
                                Padding="5"
                                WidthRequest="120"
                               BorderColor="Transparent"
                               BackgroundColor="#FFFFFF"
                               CornerRadius="15"
                               HasShadow="True">
                                <VerticalStackLayout Spacing="10" Margin="0,5,0,10">
                                    <!-- Görsel -->
                                    <Image Source="announcement_icon.png"
                                   HeightRequest="60"
                                   WidthRequest="60"
                                   HorizontalOptions="Center"/>
                                    <BoxView HeightRequest="1"
                                     Color="#1F252A"
                                     Opacity="0.3"/>
                                    <Label Text="Duyurular"
                            FontSize="16"
                             FontFamily="NexaHeavy"
                            TextColor="#1F252A"
                            HorizontalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="Tapduyuru_Tapped"/>
                                            </Label.GestureRecognizers>

                                    </Label>

                                </VerticalStackLayout>
                            </Frame>

                            <!-- Harcama Kartı -->
                            <Frame Grid.Column="2"
                           Margin="5"
                           Padding="5"
                           WidthRequest="120"
                           BorderColor="Transparent"
                           BackgroundColor="#FFFFFF"
                           CornerRadius="15"
                           HasShadow="True">
                                <VerticalStackLayout Spacing="10" Margin="0,5,0,10">
                                    <!-- Görsel -->
                                    <Image Source="harcama.png"
                       HeightRequest="60"
                       WidthRequest="60"
                       HorizontalOptions="Center"/>
                                    <BoxView HeightRequest="1"
                                Color="#1F252A"
                                Opacity="0.3"/>
                                    <!-- Başlık -->
                                    <Label Text="Harcama"
                       FontSize="16"
                        FontFamily="NexaHeavy"
                       TextColor="#1F252A"
                       HorizontalOptions="Center">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="Tapharcama_Tapped"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                        <!-- Ayraç -->
                                 
                                 
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

        </StackLayout>

