<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="goosorgtr_mobil.ParentViews.ParentUser"
             xmlns:dx="http://schemas.devexpress.com/maui"
             xmlns:local="clr-namespace:goosorgtr_mobil.Models"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#fff">

    <ContentPage.BindingContext>
        <local:ParentViewModel/>
    </ContentPage.BindingContext>


    <ContentPage.Resources>
        <Style x:Key="CardStyle" TargetType="Frame">
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="HasShadow" Value="True"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="HeightRequest" Value="80"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <Grid Padding="20" RowSpacing="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Üst Profil Kartı -->
            <Frame BorderColor="Transparent" Grid.Row="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Profil Bilgileri -->
                    <Grid Grid.Row="0" ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Profil Fotoğrafı -->
                        <Frame HeightRequest="110" 
                               WidthRequest="110" 
                               CornerRadius="55" 
                               IsClippedToBounds="True" 
                               Padding="0"
                               BorderColor="Transparent">
                            <Image Source="https://png.pngtree.com/png-vector/20231019/ourlarge/pngtree-user-profile-avatar-png-image_10211467.png"
                                   Aspect="AspectFill">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ChangeProfilePhotoCommand}"/>
                                </Image.GestureRecognizers>
                            </Image>
                        </Frame>

                        <!-- Kişisel Bilgiler -->
                        <VerticalStackLayout Grid.Column="1" 
                                           Spacing="8" 
                                           VerticalOptions="Center">
                            <Label Text="Ahmet Yılmaz"
                                   FontSize="26"
                                   FontAttributes="Bold"/>
                            <Label Text="ahmet.yilmaz@email.com"
                                   TextColor="#666666"
                                   FontSize="16"/>
                            <Label Text="Tel: 0555 555 55 55"
                                   TextColor="#666666"
                                   FontSize="16"/>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Profil Durumu -->
                    <Frame Grid.Row="1" 
                           BorderColor="Transparent"
                           BackgroundColor="#F3F2F7" 
                           CornerRadius="15"
                           Margin="0,15,0,0"
                           Padding="15">
                        <Grid ColumnDefinitions="*,*,*" 
                              ColumnSpacing="15">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="3" 
                                       HorizontalOptions="Center"
                                       FontSize="22"
                                       FontAttributes="Bold"/>
                                <Label Text="Öğrenci"
                                       HorizontalOptions="Center"
                                       TextColor="#666666"/>
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="12" 
                                       HorizontalOptions="Center"
                                       FontSize="22"
                                       FontAttributes="Bold"/>
                                <Label Text="Bildirim"
                                       HorizontalOptions="Center"
                                       TextColor="#666666"/>
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="2">
                                <Label Text="5" 
                                       HorizontalOptions="Center"
                                       FontSize="22"
                                       FontAttributes="Bold"/>
                                <Label Text="Mesaj"
                                       HorizontalOptions="Center"
                                       TextColor="#666666"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </Grid>
            </Frame>

            <!-- Hızlı Erişim Menüsü -->
            <Frame BorderColor="Transparent" Grid.Row="1" Style="{StaticResource CardStyle}">
                <Grid ColumnSpacing="15" RowSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Frame Grid.Column="0"
                     WidthRequest="120"
                      Padding="5"
                    Margin="0,5,0,0"
                    BorderColor="Transparent"
                    BackgroundColor="#FFFFFF"
                    CornerRadius="15"
                    HasShadow="True">
                        <VerticalStackLayout Spacing="10" Margin="0,5,0,10">
                            <!-- Görsel -->
                            <Image Source="bus.png"
                                HeightRequest="60"
                                WidthRequest="60"
                                HorizontalOptions="Center"/>
                            <BoxView HeightRequest="1"
                         Color="#1F252A"
                         Opacity="0.3"/>
                            <!-- Başlık -->
                            <Label Text="Servis"
                            FontSize="16"
                            FontFamily="NexaHeavy"
                            TextColor="#1F252A"
                            HorizontalOptions="Center"/>
                            <!-- Ayraç -->

                        </VerticalStackLayout>
                    </Frame>


                    <Frame Grid.Column="1"
                     WidthRequest="120"
                      Padding="5"
                    Margin="0,5,0,0"
                    BorderColor="Transparent"
                    BackgroundColor="#FFFFFF"
                    CornerRadius="15"
                    HasShadow="True">
                        <VerticalStackLayout Spacing="10" Margin="0,5,0,10">
                            <!-- Görsel -->
                            <Image Source="harcama.png"
                                HeightRequest="60"
                                WidthRequest="60"
                                HorizontalOptions="Center"/>
                            <BoxView HeightRequest="1"
                         Color="#1F252A"
                         Opacity="0.3"/>
                            <!-- Başlık -->
                            <Label Text="Harcamalar"
                            FontSize="16"
                            FontFamily="NexaHeavy"
                            TextColor="#1F252A"
                            HorizontalOptions="Center"/>
                            <!-- Ayraç -->

                        </VerticalStackLayout>
                    </Frame>
                    <Frame Grid.Column="0" Grid.Row="1"
                       WidthRequest="120"
                        Padding="5"
                      Margin="0,5,0,0"
                      BorderColor="Transparent"
                      BackgroundColor="#FFFFFF"
                      CornerRadius="15"
                      HasShadow="True">
                        <VerticalStackLayout Spacing="10" Margin="0,5,0,10">
                            <!-- Görsel -->
                            <Image Source="courses.png"
                                  HeightRequest="60"
                                  WidthRequest="60"
                                  HorizontalOptions="Center"/>
                            <BoxView HeightRequest="1"
                           Color="#1F252A"
                           Opacity="0.3"/>
                            <!-- Başlık -->
                            <Label Text="Dersler"
                              FontSize="16"
                              FontFamily="NexaHeavy"
                              TextColor="#1F252A"
                              HorizontalOptions="Center"/>
                            <!-- Ayraç -->

                        </VerticalStackLayout>
                    </Frame>
                    <Frame Grid.Column="1" Grid.Row="1"
                     WidthRequest="120"
                      Padding="5"
                    Margin="0,5,0,0"
                    BorderColor="Transparent"
                    BackgroundColor="#FFFFFF"
                    CornerRadius="15"
                    HasShadow="True">
                        <VerticalStackLayout Spacing="10" Margin="0,5,0,10">
                            <!-- Görsel -->
                            <Image Source="map.png"
                                HeightRequest="60"
                                WidthRequest="60"
                                HorizontalOptions="Center"/>
                            <BoxView HeightRequest="1"
                         Color="#1F252A"
                         Opacity="0.3"/>
                            <!-- Başlık -->
                            <Label Text="Konum"
                            FontSize="16"
                            FontFamily="NexaHeavy"
                            TextColor="#1F252A"
                            HorizontalOptions="Center"/>
                            <!-- Ayraç -->

                        </VerticalStackLayout>
                    </Frame>


                </Grid>
            </Frame>

            <!-- Öğrenci Özeti -->
            <Frame BorderColor="Transparent" Grid.Row="2" Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="15">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Öğrencilerim"
                               FontSize="20"
                               FontAttributes="Bold"/>
                        <Button Grid.Column="1"
                                Text="Tümünü Gör"
                                FontSize="14"
                                TextColor="#4CAF50"
                                BackgroundColor="Transparent"/>
                    </Grid>

                    <CollectionView ItemsSource="{Binding Profiles}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Margin="0,5" 
                                       Padding="15"
                                       CornerRadius="15"
                                       BorderColor="Transparent">
                                    <Grid ColumnSpacing="15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Frame HeightRequest="60" 
                                               WidthRequest="60" 
                                               CornerRadius="30" 
                                               IsClippedToBounds="True" 
                                               Padding="0"
                                               BorderColor="Transparent">
                                            <Image  Source="{Binding ProfileImage}"
                                                   HeightRequest="60"  
                                                           AbsoluteLayout.LayoutBounds="10, 15, AutoSize, AutoSize"
                                                           AbsoluteLayout.LayoutFlags="PositionProportional" 
                                                           WidthRequest="60" 
                                                           Aspect="AspectFill"/>
                                        </Frame>

                                        <VerticalStackLayout Grid.Column="1" 
                                                           Spacing="5">
                                            <Label Text="{Binding Name}"
                                                   FontAttributes="Bold"
                                                   FontSize="16"/>
                                            <Label Text="{Binding NoPhotos, StringFormat='{0} .Sınıf'}"
                                                   TextColor="#666666"
                                                   FontSize="14"/>
                                            <ProgressBar Progress="0.73"
                                                         ProgressColor="#4CAF50"
                                                         HeightRequest="6"/>
                                        </VerticalStackLayout>

                                        <Button Grid.Column="2"
                                                Text="Detay"
                                                BackgroundColor="#F0F0F0"
                                                TextColor="#333333"
                                                CornerRadius="20"
                                                HeightRequest="36"
                                                WidthRequest="80"
                                                FontSize="14"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Hızlı İşlemler -->
            <Frame BorderColor="Transparent" Grid.Row="3" Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Hızlı İşlemler"
                           FontSize="20"
                           FontAttributes="Bold"/>

                    <Grid RowSpacing="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- İzin Talebi -->
                        <Frame BorderColor="Transparent" Grid.Row="0"
                               BackgroundColor="#F3F2F7"
                               Padding="15"
                               CornerRadius="15">
                            <Grid ColumnDefinitions="Auto,*,Auto" 
                                  ColumnSpacing="15">
                                <Frame BorderColor="Transparent" BackgroundColor="#E3F2FD"
                                       WidthRequest="40"
                                       HeightRequest="40"
                                       CornerRadius="30"
                                       Padding="10">
                                    <Image Source="request.png" 
                                                WidthRequest="20"
                                                HeightRequest="20"/>
                                </Frame>
                                <VerticalStackLayout Grid.Column="1" 
                                                   Spacing="5">
                                    <Label Text="İzin Talebi"
                                           FontAttributes="Bold"/>
                                    <Label Text="Öğrenciniz için izin talebi oluşturun"
                                           TextColor="#666666"
                                           FontSize="14"/>
                                </VerticalStackLayout>
                                <Button Grid.Column="2"
                                        Text="Oluştur"
                                        BackgroundColor="#2196F3"
                                        TextColor="White"
                                        CornerRadius="20"
                                        HeightRequest="36"
                                        WidthRequest="95"/>
                            </Grid>
                        </Frame>

                        <!-- Öğretmen Görüşmesi -->
                        <Frame BorderColor="Transparent" Grid.Row="1"
                               BackgroundColor="#F3F2F7"
                               Padding="15"
                               CornerRadius="15">
                            <Grid ColumnDefinitions="Auto,*,Auto" 
                                  ColumnSpacing="15">
                                <Frame BorderColor="Transparent" BackgroundColor="#E3F2FD"
                                 WidthRequest="40"
                                 HeightRequest="40"
                                 CornerRadius="30"
                                 Padding="10">
                                    <Image Source="meeting.png" 
                                          WidthRequest="20"
                                          HeightRequest="20"/>
                                </Frame>
                                <VerticalStackLayout Grid.Column="1" 
                                                   Spacing="5">
                                    <Label Text="Öğretmen Görüşmesi"
                                           FontAttributes="Bold"/>
                                    <Label Text="Görüşme randevusu planlayın"
                                           TextColor="#666666"
                                           FontSize="14"/>
                                </VerticalStackLayout>
                                <Button Grid.Column="2"
                                        Text="Planla"
                                        BackgroundColor="#4CAF50"
                                        TextColor="White"
                                        CornerRadius="20"
                                        HeightRequest="36"
                                        WidthRequest="91"/>
                            </Grid>
                        </Frame>

                        <!-- Okul Ödemeleri -->
                        <Frame BorderColor="Transparent" Grid.Row="2"
                               BackgroundColor="#F3F2F7"
                               Padding="15"
                               CornerRadius="15">
                            <Grid ColumnDefinitions="Auto,*,Auto" 
                                  ColumnSpacing="15">
                                <Frame BorderColor="Transparent" BackgroundColor="#E3F2FD"
                            WidthRequest="40"
                            HeightRequest="40"
                            CornerRadius="30"
                            Padding="10">
                                    <Image Source="payment.png" 
                                     WidthRequest="20"
                                     HeightRequest="20"/>
                                </Frame>
                                <VerticalStackLayout Grid.Column="1" 
                                                   Spacing="5">
                                    <Label Text="Okul Ödemeleri"
                                           FontAttributes="Bold"/>
                                    <Label Text="Ödeme işlemlerini görüntüleyin"
                                           TextColor="#666666"
                                           FontSize="14"/>
                                </VerticalStackLayout>
                                <Button Grid.Column="2"
                                        Text="Ödemeler"
                                        BackgroundColor="#FF9800"
                                        TextColor="White"
                                        CornerRadius="20"
                                        HeightRequest="36"
                                        WidthRequest="95"/>
                            </Grid>
                        </Frame>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Alt Menü -->
            <Frame BorderColor="Transparent" Grid.Row="4" Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="15">
                    <!-- Profil Ayarları -->
                    <Grid ColumnDefinitions="Auto,*,Auto" 
                          ColumnSpacing="15">
                        <Frame BorderColor="Transparent" BackgroundColor="#F3F2F7"
                               WidthRequest="40"
                               HeightRequest="40"
                               CornerRadius="30"
                               Padding="5">
                            <Image Source="settings.png" 
                                   WidthRequest="20"
                                   HeightRequest="20"/>
                        </Frame>
                        <Label Grid.Column="1"
                               Text="Profil Ayarları"
                               VerticalOptions="Center"
                               FontAttributes="Bold"/>

                        <Image Grid.Column="2"
                               Source="right.png"
                               HeightRequest="20"
                               WidthRequest="20"/>
                    </Grid>

                    <!-- Bildirim Ayarları -->
                    <Grid ColumnDefinitions="Auto,*,Auto" 
                          ColumnSpacing="15">
                        <Frame BorderColor="Transparent" BackgroundColor="#F3F2F7"
                           WidthRequest="40"
                           HeightRequest="40"
                           CornerRadius="30"
                           Padding="5">
                            <Image Source="settings_notifications.png" 
                                   WidthRequest="20"
                                   HeightRequest="20"/>
                        </Frame>
                        <Label Grid.Column="1"
                              
                               Text="Bildirim Ayarları"
                               VerticalOptions="Center"
                               FontAttributes="Bold">
                            <Label.GestureRecognizers >
                                <TapGestureRecognizer Tapped="lblBildirimAyar_Tapped"/>
                            </Label.GestureRecognizers>


                        </Label>
                        <Image Grid.Column="2"
                               Source="right.png"
                               HeightRequest="20"
                               WidthRequest="20"/>
                    </Grid>
                    <!-- Mesajlar -->
                    <Grid ColumnDefinitions="Auto,*,Auto" 
       ColumnSpacing="15">
                        <Frame BorderColor="Transparent" BackgroundColor="#F3F2F7"
        WidthRequest="40"
        HeightRequest="40"
        CornerRadius="30"
        Padding="5">
                            <Image Source="settings_notifications.png" 
                WidthRequest="20"
                HeightRequest="20"/>
                        </Frame>
                        <Label Grid.Column="1"
           
            Text="Mesajlar"
            VerticalOptions="Center"
            FontAttributes="Bold">
                            <Label.GestureRecognizers >
                                <TapGestureRecognizer x:Name="mesajlarlbl" Tapped="mesajlarlbl_Tapped"/>
                            </Label.GestureRecognizers>


                        </Label>
                        <Image Grid.Column="2"
            Source="right.png"
            HeightRequest="20"
            WidthRequest="20"/>
                    </Grid>
                    <!-- Gizlilik ve Güvenlik -->
                    <Grid ColumnDefinitions="Auto,*,Auto" 
                          ColumnSpacing="15">
                        <Frame BorderColor="Transparent" BackgroundColor="#F3F2F7"
                           WidthRequest="40"
                           HeightRequest="40"
                           CornerRadius="30"
                           Padding="5">
                            <Image Source="security.png" 
                                   WidthRequest="20"
                                   HeightRequest="20"/>
                        </Frame>
                        <Label Grid.Column="1"
                               Text="Gizlilik ve Güvenlik"
                               VerticalOptions="Center"
                               FontAttributes="Bold"/>
                        <Image Grid.Column="2"
                               Source="right.png"
                               HeightRequest="20"
                               WidthRequest="20"/>
                    </Grid>

                    <!-- Yardım ve Destek -->
                    <Grid ColumnDefinitions="Auto,*,Auto" 
                          ColumnSpacing="15">
                        <Frame BorderColor="Transparent" BackgroundColor="#F3F2F7"
                               WidthRequest="40"
                               HeightRequest="40"
                               CornerRadius="30"
                               Padding="5">
                            <Image Source="interrogation.png" 
                                   WidthRequest="20"
                                   HeightRequest="20"/>
                        </Frame>
                        <Label Grid.Column="1"
                               Text="Yardım ve Destek"
                               VerticalOptions="Center"
                               FontAttributes="Bold"/>
                        <Image Grid.Column="2"
                               Source="right.png"
                               HeightRequest="20"
                               WidthRequest="20"/>
                    </Grid>

                    <!-- Çıkış Yap -->
                    <Button Text="Çıkış Yap"
                            BackgroundColor="#FF5252"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            Margin="0,10,0,0"
                            x:Name="btnCikis"
                            Clicked="btnCikis_Clicked"
                            >
                        <Button.Shadow>
                            <Shadow Brush="#FF5252"
                                   Offset="0,3"
                                   Radius="10"
                                   Opacity="0.2"/>
                        </Button.Shadow>
                    </Button>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>
