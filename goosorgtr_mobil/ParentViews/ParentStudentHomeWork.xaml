<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="goosorgtr_mobil.ParentViews.ParentStudentHomeWork"
             Title="Dersler">
    <ContentPage.Content>
        <VerticalStackLayout Padding="20" Spacing="15" HorizontalOptions="Center" VerticalOptions="Center">

            <!-- Dersler Butonu -->
            <Button Text="Dersler"
                    FontSize="18"
                    BackgroundColor="#FF9800"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="200"
                    HeightRequest="50"
                    Clicked="OnDerslerButtonClicked" />

            <!-- Ders Programı Butonu -->
            <Button Text="Ders Programı"
                    FontSize="18"
                    BackgroundColor="#3F51B5"
                    TextColor="White"
                    CornerRadius="10"
                    WidthRequest="200"
                    HeightRequest="50"
                    Clicked="OnDersProgramiButtonClicked" />

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
