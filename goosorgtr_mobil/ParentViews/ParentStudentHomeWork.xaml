<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="goosorgtr_mobil.ParentViews.ParentStudentHomeWork"
             BackgroundColor="#F3F2F7"
             Title="Dersler">


        <ScrollView>
            <Grid RowDefinitions="Auto,Auto"
              Padding="20"
              RowSpacing="25">

                <!-- Başlık Bölümü -->
                <VerticalStackLayout Grid.Row="0" Spacing="8">
                    <Label Text="Ders Bilgileri"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#1a1a1a"/>
                    <Label Text="Öğrencinizin ders ve program bilgilerini görüntüleyebilirsiniz"
                       FontSize="16"
                       TextColor="#666666"/>
                </VerticalStackLayout>

                <!-- Kartlar -->
                <Grid Grid.Row="1" 
                  RowDefinitions="*,*" 
                  RowSpacing="20"
                  Margin="0,10">

                    <!-- Dersler Kartı -->
                <Border Grid.Row="0"
                        StrokeShape="RoundRectangle 16"
                        Stroke="Transparent"
                        VerticalOptions="CenterAndExpand"
                        HorizontalOptions="CenterAndExpand"
                        BackgroundColor="White">
                    <Grid RowDefinitions="Auto,Auto,Auto" 
                          Padding="20" 
                          RowSpacing="12">
                        <Grid Grid.Row="0" 
                              ColumnDefinitions="Auto,*"
                              ColumnSpacing="15">
                            <Border Grid.Column="0"
                                    HeightRequest="60"
                                    WidthRequest="60"
                                    Stroke="Transparent"
                                    StrokeShape="RoundRectangle 12"
                                    BackgroundColor="#EEF2FF">
                                <Image Source="courses.png"
                                       Margin="12"/>
                            </Border>
                            <Button Grid.Column="1"
                                   Text="Görüntüle"
                                   Clicked="OnDerslerButtonClicked"
                                   VerticalOptions="CenterAndExpand"
                                   HorizontalOptions="EndAndExpand"
                                   Style="{StaticResource ProgramButton}"
                                   Margin="0,10,0,0"/>
                        </Grid>
                        <Label Grid.Row="1"
                               Text="Dersler"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#1a1a1a"/>
                        <Label Grid.Row="2"
                               Text="Öğrencinizin aldığı tüm dersleri ve öğretmen bilgilerini görüntüleyin"
                               FontSize="14"
                               TextColor="#666666"
                               LineBreakMode="WordWrap"/>
                    </Grid>
                    </Border>

                    <!-- Ders Programı Kartı -->
                <Border Grid.Row="1"
                        StrokeShape="RoundRectangle 16"
                        Stroke="Transparent"
                        VerticalOptions="CenterAndExpand"
                        HorizontalOptions="CenterAndExpand"
                        BackgroundColor="White">
                    <Grid RowDefinitions="Auto,Auto,Auto" 
                          Padding="20" 
                          RowSpacing="12">
                            <Grid Grid.Row="0" 
                               ColumnDefinitions="Auto,*"
                               ColumnSpacing="15">
                                                    <Border Grid.Column="0"
                                     HeightRequest="60"
                                     WidthRequest="60"
                                     Stroke="Transparent"
                                     StrokeShape="RoundRectangle 12"
                                     BackgroundColor="#EEF2FF">
                                <Image Source="schedule.png"
                                        Margin="12"/>
                                                    </Border>
                                                    <Button Grid.Column="1"
                                    Text="Görüntüle"
                                    Clicked="OnDersProgramiButtonClicked"
                                    VerticalOptions="CenterAndExpand"
                                    HorizontalOptions="EndAndExpand"
                                    Style="{StaticResource DerslerButton}"
                                    Margin="0,10,0,0"/>
                            </Grid>
                        <Label Grid.Row="1"
                               Text="Ders Programı"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#1a1a1a"/>
                        <Label Grid.Row="2"
                               Text="Haftalık ders programını ve ders saatlerini detaylı olarak inceleyin"
                               FontSize="14"
                               TextColor="#666666"
                               LineBreakMode="WordWrap"/>
                    </Grid>
                    </Border>
                </Grid>
            </Grid>
        </ScrollView>


    <ContentPage.Resources>
        <Style x:Key="ProgramButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#1F252A"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="HeightRequest" Value="40"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style> 
        <Style x:Key="DerslerButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#1F252A"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="HeightRequest" Value="40"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
    </ContentPage.Resources>
</ContentPage>
