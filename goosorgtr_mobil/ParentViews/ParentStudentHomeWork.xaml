<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            
            x:Class="goosorgtr_mobil.ParentViews.ParentStudentHomeWork" 
             Title="Ders sayfası"
             >
   
        
        <VerticalStackLayout Padding="20" Spacing="30" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" >

           
            <Frame HasShadow="True" CornerRadius="25" Padding="0" WidthRequest="200" HeightRequest="50" >
                <Button Text="Dersler"
                    FontSize="18"
                    TextColor="White"
                    BackgroundColor="#FF9800"
                    CornerRadius="25" 
                    Clicked="OnDerslerButtonClicked"
                    />
            </Frame>

         
            <Frame HasShadow="True" CornerRadius="25" Padding="0" WidthRequest="200" HeightRequest="50">
                <Button Text="Ders Programı"
                    FontSize="18"
                    TextColor="White"
                    BackgroundColor="#3F51B5"
                    CornerRadius="25" 
                    Clicked="OnDersProgramiButtonClicked"
                    />
            </Frame>

        </VerticalStackLayout>
  
</ContentPage>