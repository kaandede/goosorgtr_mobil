<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:goosorgtr_mobil.ViewModels"
             x:Class="goosorgtr_mobil.ParentViews.Duyuru"
             Title="Duyuru">

    <!-- BindingContext, AnnouncementViewModel sınıfını kullanır -->
    <ContentPage.BindingContext>
        <vm:AnnouncementViewModel />
    </ContentPage.BindingContext>

    <!-- CollectionView, duyuru listesini görüntüler -->
    <CollectionView ItemsSource="{Binding Announcements}" SelectionChanged="OnSelectionChanged">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="5" BorderColor="LightGray" CornerRadius="5">
                    <StackLayout>
                        <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="16" />
                        <Label Text="{Binding Date}" FontSize="14" TextColor="Gray" />
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
