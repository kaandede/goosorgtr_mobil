<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           x:Class="goosorgtr_mobil.ParentViews.ProfileSettingsPage"

             Title="profil ayarlar sayfası">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Profil Ayarları" 
                   FontSize="24" 
                   Margin="0,0,0,20"/>

            <VerticalStackLayout Margin="0,10">
                <Label Text="Ad Soyad"/>
                <Entry x:Name="NameEntry" 
                       Margin="0,5"/>
            </VerticalStackLayout>

            <VerticalStackLayout Margin="0,10">
                <Label Text="E-posta"/>
                <Entry x:Name="EmailEntry" 
                       Keyboard="Email"
                       Margin="0,5"/>
            </VerticalStackLayout>

            <VerticalStackLayout Margin="0,10">
                <Label Text="Telefon"/>
                <Entry x:Name="PhoneEntry" 
                       Keyboard="Telephone"
                       Margin="0,5"/>
            </VerticalStackLayout>

            <Button Text="Değişiklikleri Kaydet" 
                    BackgroundColor="#4CAF50" 
                    TextColor="White" 
                    HeightRequest="40" 
                    Margin="0,20"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>