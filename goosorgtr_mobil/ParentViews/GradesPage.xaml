<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:goosorgtr_mobil.ViewModels"
             xmlns:models="clr-namespace:goosorgtr_mobil.GoosClient.Models"
             x:Class="goosorgtr_mobil.ParentViews.GradesPage"
             x:DataType="viewmodels:GradePageViewModel"
             Title="{Binding Title}">

    <CollectionView ItemsSource="{Binding Grades}"
                   Margin="10">
        <CollectionView.EmptyView>
            <Label Text="Henüz not bulunmamaktadır."
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </CollectionView.EmptyView>

        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:GradeModel">
                <Frame Margin="0,5" Padding="15">
                    <Grid RowSpacing="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" 
                               Text="{Binding StudentName}" 
                               FontAttributes="Bold"/>
                        <Label Grid.Row="1" 
                               Text="{Binding ExamName}"
                               TextColor="Gray"/>
                        <Label Grid.Row="2" 
                               Text="{Binding Score, StringFormat='Not: {0:F2}'}"
                               TextColor="Green"
                               FontAttributes="Bold"/>
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>