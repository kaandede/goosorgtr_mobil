<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="goosorgtr_mobil.ParentViews.harcama"
             Title="Harcamalar">
    <ContentPage.Content>
        <Grid BackgroundColor="#F8E9FF" Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Üst kısım (Buton) -->
                <RowDefinition Height="*" />
                <!-- Ana içerik alanı -->
                <RowDefinition Height="60" />
                <!-- Alt menü (TabBar) -->
            </Grid.RowDefinitions>

            <!-- Harcamalar Butonu -->
            <Button Text="HARCAMALAR" 
                    BackgroundColor="#FFA500" 
                    TextColor="White"
                    CornerRadius="10" 
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    WidthRequest="200"
                    Margin="0,20,0,20" />

            <!-- Harcanan Fiyat Alanı -->
            <Frame Grid.Row="1" Padding="10" BorderColor="Black" CornerRadius="10" Margin="20">
                <Label Text="harcanılan fiyat"
                       FontSize="18" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" />
            </Frame>
      
        </Grid>
    </ContentPage.Content>
</ContentPage>
