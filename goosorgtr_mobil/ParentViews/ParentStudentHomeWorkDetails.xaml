<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:goosorgtr_mobil.ViewModels"
             x:Class="goosorgtr_mobil.ParentViews.ParentStudentHomeWorkDetails"
             Title="Dersler"
             BackgroundColor="#F3F2F7">

    <ContentPage.BindingContext>
        <vm:LessonDetailsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Dersler"
                 FontSize="28"
                 FontAttributes="Bold"
                 TextColor="#1a1a1a"
                 Margin="0,0,0,20" />

            <!-- Ders Listesi -->
            <CollectionView ItemsSource="{Binding Courses}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeShape="RoundRectangle 12" BackgroundColor="White" Margin="0,10">
                            <Grid Padding="15" ColumnDefinitions="*,Auto">
                                <Label Text="{Binding CourseName}"
                                     FontSize="18"
                                     FontAttributes="Bold"
                                     TextColor="#1a1a1a" />

                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>