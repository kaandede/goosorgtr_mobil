<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="goosorgtr_mobil.ParentViews.ParentStudentHomeWorkDetails"
             Title="Dersler"
             xmlns:models="clr-namespace:goosorgtr_mobil.Models"
             BackgroundColor="#F3F2F7">

    <ContentPage.BindingContext>
        <models:ParentStudentHomeWorkViewModel/>
    </ContentPage.BindingContext>
    <ScrollView>
        <Grid RowDefinitions="Auto,*"
              Padding="20"
              RowSpacing="20">

            <!-- Başlık -->
            <VerticalStackLayout Grid.Row="0" Spacing="8">
                <Label Text="Öğrenci Dersleri"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#1a1a1a"/>
                <Label Text="Bu dönem alınan dersler ve öğretmen bilgileri"
                       FontSize="16"
                       TextColor="#666666"/>
            </VerticalStackLayout>

            <!-- Statik Dersler Listesi -->
            <VerticalStackLayout Grid.Row="1" 
                               Spacing="15"
                               Margin="0,10">

                <!-- Matematik Dersi -->
                <Border StrokeShape="RoundRectangle 16"
                        BackgroundColor="White"
                        Stroke="Transparent">
                    <Grid Padding="20" 
                          ColumnDefinitions="Auto,*,Auto"
                          ColumnSpacing="15">
                        <Border Grid.Column="0"
                                HeightRequest="60"
                                WidthRequest="60"
                                Stroke="Transparent"
                                StrokeShape="RoundRectangle 12"
                                BackgroundColor="#EEF2FF">
                            <Image Source="calculator.png"
                                   Margin="12"/>
                        </Border>
                        <VerticalStackLayout Grid.Column="1" 
                                           Spacing="4"
                                           VerticalOptions="Center">
                            <Label Text="Matematik"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#1a1a1a"/>
                            <Label Text="Ayşe Yılmaz"
                                   FontSize="14"
                                   TextColor="#6B7280"/>
                            <Label Text="Pazartesi - Çarşamba"
                                   FontSize="14"
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>
                        <Button Grid.Column="2"
                                Text="Detay"
                                HeightRequest="40"
                                VerticalOptions="Center"
                                BackgroundColor="#4F46E5"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="20"
                                Padding="20,0"/>
                    </Grid>
                </Border>

                <!-- Fizik Dersi -->
                <Border StrokeShape="RoundRectangle 16"
                        BackgroundColor="White"
                        Stroke="Transparent">
                    <Grid Padding="20" 
                          ColumnDefinitions="Auto,*,Auto"
                          ColumnSpacing="15">
                        <Border Grid.Column="0"
                                HeightRequest="60"
                                WidthRequest="60" Stroke="Transparent"
                                StrokeShape="RoundRectangle 12"
                                BackgroundColor="#FEF3C7">
                            <Image Source="atom.png"
                                   Margin="12"/>
                        </Border>
                        <VerticalStackLayout Grid.Column="1" 
                                           Spacing="4"
                                           VerticalOptions="Center">
                            <Label Text="Fizik"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#1a1a1a"/>
                            <Label Text="Mehmet Demir"
                                   FontSize="14"
                                   TextColor="#6B7280"/>
                            <Label Text="Salı - Perşembe"
                                   FontSize="14"
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>
                        <Button Grid.Column="2"
                                Text="Detay"
                                HeightRequest="40"
                                VerticalOptions="Center"
                                BackgroundColor="#D97706"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="20"
                                Padding="20,0"/>
                    </Grid>
                </Border>

                <!-- Kimya Dersi -->
                <Border StrokeShape="RoundRectangle 16"
                        BackgroundColor="White"
                        Stroke="Transparent">
                    <Grid Padding="20" 
                          ColumnDefinitions="Auto,*,Auto"
                          ColumnSpacing="15">
                        <Border Grid.Column="0"
                                HeightRequest="60"
                                WidthRequest="60" Stroke="Transparent"
                                StrokeShape="RoundRectangle 12"
                                BackgroundColor="#ECFDF5">
                            <Image Source="chemistry.png"
                                   Margin="12"/>
                        </Border>
                        <VerticalStackLayout Grid.Column="1" 
                                           Spacing="4"
                                           VerticalOptions="Center">
                            <Label Text="Kimya"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#1a1a1a"/>
                            <Label Text="Zeynep Kaya"
                                   FontSize="14"
                                   TextColor="#6B7280"/>
                            <Label Text="Çarşamba - Cuma"
                                   FontSize="14"
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>
                        <Button Grid.Column="2"
                                Text="Detay"
                                HeightRequest="40"
                                VerticalOptions="Center"
                                BackgroundColor="#059669"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="20"
                                Padding="20,0"/>
                    </Grid>
                </Border>

                <!-- Biyoloji Dersi -->
                <Border StrokeShape="RoundRectangle 16"
                        BackgroundColor="White"
                        Stroke="Transparent">
                    <Grid Padding="20" 
                          ColumnDefinitions="Auto,*,Auto"
                          ColumnSpacing="15">
                        <Border Grid.Column="0"
                                HeightRequest="60"
                                WidthRequest="60" Stroke="Transparent"
                                StrokeShape="RoundRectangle 12"
                                BackgroundColor="#FCE7F3">
                            <Image Source="dna.png"
                                   Margin="12"/>
                        </Border>
                        <VerticalStackLayout Grid.Column="1" 
                                           Spacing="4"
                                           VerticalOptions="Center">
                            <Label Text="Biyoloji"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#1a1a1a"/>
                            <Label Text="Ali Öztürk"
                                   FontSize="14"
                                   TextColor="#6B7280"/>
                            <Label Text="Pazartesi - Perşembe"
                                   FontSize="14"
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>
                        <Button Grid.Column="2"
                                Text="Detay"
                                HeightRequest="40"
                                VerticalOptions="Center"
                                BackgroundColor="#DB2777"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="20"
                                Padding="20,0"/>
                    </Grid>
                </Border>

                <!-- Türkçe Dersi -->
                <Border StrokeShape="RoundRectangle 16"
                        BackgroundColor="White"
                        Stroke="Transparent">
                    <Grid Padding="20" 
                          ColumnDefinitions="Auto,*,Auto"
                          ColumnSpacing="15">
                        <Border Grid.Column="0"
                                HeightRequest="60"
                                WidthRequest="60" Stroke="Transparent"
                                StrokeShape="RoundRectangle 12"
                                BackgroundColor="#EDE9FE">
                            <Image Source="turkce_lesson.png"
                                   Margin="12"/>
                        </Border>
                        <VerticalStackLayout Grid.Column="1" 
                                           Spacing="4"
                                           VerticalOptions="Center">
                            <Label Text="Türkçe"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#1a1a1a"/>
                            <Label Text="Fatma Şahin"
                                   FontSize="14"
                                   TextColor="#6B7280"/>
                            <Label Text="Salı - Cuma"
                                   FontSize="14"
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>
                        <Button Grid.Column="2"
                                Text="Detay"
                                HeightRequest="40"
                                VerticalOptions="Center"
                                BackgroundColor="#7C3AED"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="20"
                                Padding="20,0"/>
                    </Grid>
                </Border>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>